class Person {
	let name
	let surname

	func new(name, surname) {
		this.name = name
		this.surname = surname
	}

	func Introduction() {
		emitln("I am " + this.name + " " + surname + "!")
	}

	func Greet(other) {
		emitln(name + " greeted " + other.name + "!")
	}
}

let px = Person("Name1", "Surname1")
let py = Person("Name2", "Surname2")

px.Introduction()
py.Introduction()

px.Greet(py)